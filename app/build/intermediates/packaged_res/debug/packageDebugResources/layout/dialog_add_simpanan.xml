<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- ðŸ”½ DROPDOWN PEGAWAI (ADMIN PILIH EMP001 / EMP002 / dst) -->
    <Spinner
        android:id="@+id/spinnerPegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>

    <!-- Tetap ada, tapi diisi otomatis dari spinner -->
    <EditText
        android:id="@+id/etKodePegawai"
        android:hint="Kode Pegawai (contoh: EMP001)"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"/>

    <!-- Jenis simpanan -->
    <Spinner
        android:id="@+id/spinnerJenis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <!-- Jumlah -->
    <EditText
        android:id="@+id/etJumlah"
        android:hint="Jumlah (Rp)"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
</LinearLayout>
