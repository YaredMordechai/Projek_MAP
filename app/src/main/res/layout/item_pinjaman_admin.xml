<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:strokeColor="@android:color/darker_gray"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Nama + Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNamaPemohon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nama Pemohon"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Tetap TextView (bukan Chip) agar adapter lama tetap aman -->
            <TextView
                android:id="@+id/tvStatusPinjaman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Menunggu"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:background="@android:color/holo_orange_dark"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Kode Pegawai -->
        <TextView
            android:id="@+id/tvKodePegawai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Kode Pegawai: EMPXXX"
            android:textColor="@android:color/darker_gray" />

        <!-- Divider tipis -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#1F000000" />

        <!-- Jumlah Pinjaman (besar & tegas) -->
        <TextView
            android:id="@+id/tvJumlahPinjaman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Rp 0"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Tombol aksi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApprove"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Setujui"
                app:icon="@drawable/ic_check" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReject"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="Tolak"
                app:icon="@drawable/ic_close" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
