<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <TextView
        android:id="@+id/txtTotalSimpanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Simpanan: Rp0"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:background="@drawable/bg_card_light" />

    <TextView
        android:id="@+id/txtTotalPinjaman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Pinjaman Aktif: Rp0"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:background="@drawable/bg_card_light" />

    <TextView
        android:id="@+id/txtTotalAngsuran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Angsuran Bulan Ini: Rp0"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:background="@drawable/bg_card_light" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHistoriBulanan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:nestedScrollingEnabled="false" />
</LinearLayout>
