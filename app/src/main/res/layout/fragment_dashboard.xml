<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Foto Profil -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_profil"
            android:background="@drawable/bg_card_light"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:elevation="3dp"
            android:layout_gravity="center" />

        <!-- Nama & ID User -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Halo, User"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KodePegawai"
            android:textColor="@color/grey_600"
            android:layout_marginBottom="20dp" />

        <!-- Tombol Navigasi -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoSimpanan"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Kelola Simpanan"
                app:icon="@drawable/ic_simpanan"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoPinjaman"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Kelola Pinjaman"
                app:icon="@drawable/ic_pinjaman"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginBottom="8dp"/>

<!--            <com.google.android.material.button.MaterialButton-->
<!--                android:id="@+id/btnGoCicilan"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="60dp"-->
<!--                android:text="Lihat Cicilan"-->
<!--                app:icon="@drawable/ic_cicilan"-->
<!--                app:iconGravity="textStart"-->
<!--                app:iconPadding="12dp"-->
<!--                style="@style/Widget.MaterialComponents.Button.OutlinedButton"-->
<!--                android:layout_marginBottom="8dp"/>-->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoLaporan"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Laporan Bulanan"
                app:icon="@drawable/ic_laporan"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoProfil"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Profil Pengguna"
                app:icon="@drawable/ic_profil"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
