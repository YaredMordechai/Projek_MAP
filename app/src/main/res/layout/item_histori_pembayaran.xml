<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/bg_card_shadow"
    android:gravity="center_vertical"
    android:layout_marginBottom="8dp">

    <!-- Icon utama -->
    <ImageView
        android:id="@+id/imgPaymentIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_payment"
        app:tint="@color/green_700"
        android:layout_marginEnd="12dp" />

    <!-- Info teks -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textStyle="bold"
            android:textColor="@color/green_900"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvJumlah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 500000"
            android:textColor="@color/green_700"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textColor="@color/green_600"
            android:textSize="13sp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp" />
    </LinearLayout>

    <!-- ðŸ“¸ Gambar bukti pembayaran -->
    <ImageView
        android:id="@+id/imgBuktiPembayaran"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_bukti"
        android:visibility="gone"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_rounded_border" />

</LinearLayout>
