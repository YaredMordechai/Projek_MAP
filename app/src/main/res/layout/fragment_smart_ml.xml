<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    android:background="#F5FFF8">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="#E9FFF0"
        android:layout_marginBottom="14dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart ML SimPin"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#183A1D"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Klasifikasi teks otomatis untuk kebutuhan koperasi"
                android:textSize="13sp"
                android:textColor="#4D6B50"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Input Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masukkan teks"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#183A1D"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etInput"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:hint="Contoh: bayar simpanan Rp50.000 untuk EMP002 bulan iniâ€¦"
                android:gravity="top|start"
                android:padding="14dp"
                android:inputType="textMultiLine"
                android:background="#F3F7F4"
                android:textColor="#1B1B1B"
                android:textColorHint="#7B8A7D"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tips: tulis natural, pakai nominal/keyword biar akurat."
                android:textSize="12sp"
                android:textColor="#6D7F70"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Predict Button -->
    <Button
        android:id="@+id/btnPredict"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="Prediksi Sekarang"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#2E7D32"
        android:textColor="#FFFFFF" />

    <!-- Output Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hasil Prediksi"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#183A1D"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Output: -"
                android:textSize="16sp"
                android:textColor="#1B1B1B"
                android:padding="12dp"
                android:background="#EAF5FF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pastikan teks jelas agar klasifikasi lebih tepat."
                android:textSize="12sp"
                android:textColor="#6D7F70"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
